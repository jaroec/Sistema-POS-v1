{
  "name": "sistema-pos",
  "version": "1.0.0",
  "description": "Sistema de Punto de Venta",
  "main": "electron/main.js",
  "scripts": {
    "dev": "node backend/src/server.js",
    "start": "node backend/src/server.js",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm start",
    "electron:dev": "concurrently \"npm run backend:dev\" \"wait-on http://localhost:3000 && wait-on http://localhost:5173 && electron .\"",
    "electron:start": "electron .",
    "build": "npm run frontend:build && electron-builder",
    "build:win": "npm run frontend:build && electron-builder --win",
    "build:mac": "npm run frontend:build && electron-builder --mac",
    "build:linux": "npm run frontend:build && electron-builder --linux"
  },
  "build": {
    "appId": "com.tuempresa.sistemapos",
    "productName": "Sistema POS",
    "directories": {
      "output": "dist-electron",
      "buildResources": "electron"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "!backend/node_modules",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "electron/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sistema POS"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/icon.png",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "electron/icon.png",
      "category": "Office"
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  }
}
